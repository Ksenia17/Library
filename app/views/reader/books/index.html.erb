<h4>Мои книги:</h4>
<p></p>
<div class="table-responsive">
<table class="table table-striped">
	
	<tr>
		<th>N n/n</th>
    	<th>Name book</th>
    	<th>Book_type </th>
    	<th>Author </th>
    	<th>Year book </th>
	</tr>
	<% if @books != 0 %>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.id %></td>
				<td><%= book.name %> </td>
				<td><%= book.book_type_id %></td>
				<td><%= book.author %></td>
				<td><%= book.year_book %></td>

				<td><%= link_to "Вернуть прочитанную", '#' %> </td>
			</tr>
		<% end %>
	<% end %>

</table>

</div>

<button type="button" class="btn btn-primary">Взять новую книгу</button>