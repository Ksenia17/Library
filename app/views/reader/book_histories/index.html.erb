<div class="container-fluid">
  <div class="row">
    <div class="col-12">
<!--       <h4>Мои книги:</h4> -->
  <h4><%= I18n.t('reader.book_histories.index.title')%></h4>
      <div class="form-font">
        <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
          <tr class="table-secondary">
            
              <th>Название книги:</th>
              <th>Категория: </th>
              <th>Автор: </th>
              <th>Дата издания: </th>
              <th>Дата выдачи книги: </th>
              <th>Дата будущего возврата книги: </th>

              <th></th>
          </tr>
          </thead>
          <tbody>
            <% @books_history.each do |history| %>
              <tr>
                
                <td><%= history.book_request.book.name %> </td>
                <td><%= history.book_request.book.book_type.name %></td>
                <td><%= history.book_request.book.author %></td>
                <td><%= history.book_request.book.year_book %></td>
                <td><%= history.owned_from.to_s(:ru_datetime) %> </td>
                
                <td><%= history.date_fut.to_s(:krat_datetime) %> </td>
                <td><%= button_to "Вернуть прочитанную",  return_book_reader_book_history_path(history), class: "btn btn-outline-primary" %> </td>

              </tr>
            <% end %>
          
         </tbody>   
        </table>

        </div>

        <!-- <button type="button" class="btn btn-primary">Взять новую книгу</button> -->
        
       </div>
      </div>
  </div>
  
</div>


