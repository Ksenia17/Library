      <%= form_for :user, url: reader_user_path(current_user), method: :put  do |f| %>
         
        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
        </div>
         
        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "form-control"  %>
        </div>
         
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
         
         <div class="form-group">
          <%= f.label :birthdate %>
          <%= f.date_field :birthdate, class: "form-control" %>
        </div>
        
        
        <div class="form-group">
          <%= f.submit "Сохранить", class: 'btn btn-outline-primary' %>
          <%= link_to 'Назад', :back, class: 'btn btn-outline-secondary'%>
        </div>
      <% end %>

