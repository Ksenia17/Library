<!-- <h4>Все экземпляры выбранной книги:</h4> -->
<h4><%= I18n.t('admin.title_book_items_index')%></h4>
<p></p>

<h5><%= I18n.t('admin.name_book')%>"<%= @book.name   %>" </h5>
<h5><%= I18n.t('admin.genre')%><%= @book.book_type.name   %> </h5>
<h5><%= I18n.t('admin.author')%><%= @book.author %> </h4>
<h5><%= I18n.t('admin.year_book')%><%= @book.year_book %> </h4>
<h5><%= I18n.t('admin.user_add')%><%= "#{@book.user.first_name.capitalize} #{@book.user.last_name.capitalize}"  %> </h4>


<div class="table-responsive">
<table class="table table-striped">
  
  <tr>
      <th><%= I18n.t('admin.nomer')%></th>
      <th><%= I18n.t('admin.user_add')%></th>         
      <th><%= I18n.t('admin.time_add')%></th>
      <th></th>
      
      
  </tr>
  
    <% @book_items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= "#{item.user.first_name.capitalize}  #{item.user.last_name.capitalize}" %> </td>        
       
        <td><%= item.created_at.to_s(:ru_datetime) %></td>
        <td><%= link_to I18n.t('admin.but_remove'),admin_book_book_item_path(@book,item),                        method: :delete,
                                  data: { confirm: "Are you sure?"} %></td>
      
      </tr>
    <% end %>
  

</table>

</div>
<div class="align-btn">
<%= button_to I18n.t('admin.but_create'),admin_book_book_items_path(@book), class:"btn btn-outline-primary" %>
</div>  
