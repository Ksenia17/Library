<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lobster&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Courgette|Lobster&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Courgette|Lobster|Spectral&display=swap" rel="stylesheet">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag  "application", "data-turbolinks-track" => true %>
    <title>Library</title>
</head>
<body>
  <div class="form-naob"> 
  <header>
    <div class="container-fluid">
      <div class="row"> 
        <div class="col">
          <nav class="navbar  navbar-light navbar-expand-lg">
            <a class="navbar-brand" href="#"><%= I18n.t('common.logo') %>
              <%= image_tag("/assets/books.png", alt: "", width:"64", height:"64") %>
              <!-- <img src="/assets/books16.png" width="64" height="64" alt=""> -->
            </a>
        <!-- <div class="collapse navbar-collapse" id="navbarNav"> -->
          <% if user_signed_in? %>
            <ul class="navbar-nav">
              <li class="nav-item">
                <!-- <a class="nav-link" href="<%=  current_user.email%>"></a> -->  
                <span class="navbar-text">
                  <%=  current_user.email%>
                </span>  
              </li>
             
              <li class="nav-item<%= " active" if I18n.locale == :ru %>" >
                <%= link_to I18n.t('common.rus'), {locale: :ru}, class: "nav-link" %>
              </li>
              <li class="nav-item<%= " active" if I18n.locale == :en %>" >
                <%= link_to I18n.t('common.eng'), {locale: :en}, class: "nav-link" %>
              </li>
               <li class="nav-item">
                <%= link_to I18n.t('common.output'), destroy_user_session_path, :method => 'delete', class: 'btn btn-outline-primary' %>
              </li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav">
              <li class="nav-item active">
                <a class="nav-link" href="<%= new_user_session_path%>"><%= I18n.t('common.input') %> </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="<%= new_user_registration_path%>"><%= I18n.t('common.registr') %></a>
              </li>
             
            </ul>
          <% end %>
        <!-- </div> -->
      </nav>

       </div> <!--row -->
    </div> <!-- col -->
  </div>  <!-- container -->
</header>

<div class="container-fluid">
    <div class="row"> 
      <div class="col">
        <!-- <div class="osn"> -->  
          <h3><%= I18n.t('common.for_admin') %> </h3>

            <nav class="navbar navbar-expand-lg navbar-light">

              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
              </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav"> 
              <li class="nav-item">
                <a class="btn btn-outline-secondary btn-sm" href="<%=admin_users_path%>" role="button" ><%= I18n.t('admin.users.index.title')%></a>
              </li>
              <li class="nav-item">
                <a class="btn btn-outline-secondary btn-sm" href="<%=list_wait_admin_users_path%>" role="button"><%= I18n.t('admin.users.list_wait.title')%></a>
                
              </li>
              <li class="nav-item">
               <a class="btn btn-outline-secondary btn-sm" href=<%=admin_fines_path%> role="button"><%= I18n.t('admin.fines.title_index')%></a>
              </li>
              <li class="nav-item">
                <a class="btn btn-outline-secondary btn-sm" href=<%=admin_books_path%> role="button"><%= I18n.t('admin.books.title_index')%></a>  
              </li>
              <li class="nav-item">
                <a class="btn btn-outline-secondary btn-sm" href=<%=admin_book_types_path%> role="button"><%= I18n.t('admin.book_types.title_types_index')%></a>
              </li>
              <li class="nav-item">
                <a class="btn btn-outline-secondary btn-sm" href=<%=admin_info_index_path%> role="button"><%= I18n.t('admin.info.title_index')%></a>
              </li>
              <li class="nav-item">
                <a class="btn btn-outline-secondary btn-sm" href=<%=admin_book_requests_path%> role="button"><%= I18n.t('admin.book_requests.index.title')%></a>
              </li>

            </ul>
          </div>
        </nav>
      <!-- </div>  --> 
     </div> <!-- row -->
    </div> <!-- col -->
  </div>  <!-- container -->                            



    <div class="container-fluid">
      <div class="row"> 
        <div class="col">

          <% if @errors %>
          <%= render 'layouts/error_messages' %>
          <% end %>
        </div> <!-- row -->
      </div> <!-- col -->
    </div>  <!-- container -->     

  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <%= yield %>
        </div> <!-- row -->
      </div> <!-- col -->
    </div>  <!-- container -->

</div> <!-- form-naob -->



</body>
</html>