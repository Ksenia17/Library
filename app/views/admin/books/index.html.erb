<h4>Учет и пополнение книг:</h4>
<p></p>
<div class="table-responsive">
<table class="table table-striped">
	
	<tr>
		<th>N n/n</th>
    	<th>Название</th>
    	<th>Категория </th>
    	<th>Автор </th>
    	<th>Год издания </th>
    	<th></th>
    	<th></th>
    	<th></th>

	</tr>
	
		<% @books.each do |book| %>
			<tr>
				<td><%= book.id %></td>
				<td><%= book.name %> </td>
				<td><%= book.book_type.name %></td>
				<td><%= book.author %></td>
				<td><%= book.year_book %></td>

				<td><%= link_to "Вся информация о книге", admin_book_book_items_path(book) %> </td>
				<td><%= link_to "Редактирование", edit_admin_book_path(book) %> </td>
				<td><%= link_to "Удаление", admin_book_path(book),
								            method: :delete,
								            data: { confirm: "Are you sure delete book?"} %> </td>

			</tr>
		<% end %>
	

</table>

<%= link_to "Добавить новую книгу", new_admin_book_path %>
</div>


