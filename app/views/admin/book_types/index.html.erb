<% if notice %>
<div class="alert-success">
  <p id="notice"><%= notice  %></p>
</div>
<% end %>
<p></p>

<h4>Категории книг: </h4>
<p></p>
<div class="table-responsive">
	<table class="table table-striped">
		<tr>
			
			<th>Название:</th>
			<th>Действие:</th>
			<th>Действие:</th>
			<th></th>
		</tr>
		
		<%@book_types.each do |type|%>
			<tr>
			
			<td><%= link_to type.name,admin_book_type_path(type) %></td>
			<td><%= link_to 'Редактирование',edit_admin_book_type_path(type) %> </td>
			<td><%= link_to 'Удаление',admin_book_type_path(type),
									method: :delete,
                                    data: { confirm: "Are you sure?"} %> </td>
			</tr>
			
		<% end %>		
	</table>
 </div>
<div class="align-btn">  	
  <%= link_to 'Добавить новую категорию',new_admin_book_type_path(@book_type), class: "btn btn-primary" %>
  <%= link_to 'Назад', :back, class: "btn btn-outline-secondary"%>
</div>	

