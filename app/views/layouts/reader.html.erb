   <%=  current_user.email  %> |<%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
   <% else %> 
   <%= link_to 'Sign In', new_user_session_path %> | <%= link_to 'Sign Up',    new_user_registration_path %> 
  	<% end %> 	

<h3>Информация только для читателей </h3>
 												
 <%= link_to 'Все книги библиотеки', reader_books_path %>|   
 <%= link_to 'Мои книги',  reader_book_histories_path  %>|  
 <%= link_to 'Личные данные', edit_reader_user_path(current_user) %>| 
 <%= link_to 'Архив', '#'  %>	|
 <%= link_to 'Журнал запросов',reader_book_requests_path %> 

<% if @errors %>
 <%= render 'layouts/error_messages' %>
<% end %> 

<%= yield %>
 
</body>
</html>