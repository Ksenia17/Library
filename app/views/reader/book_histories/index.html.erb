<div class="container-fluid">
  <div class="row">
    <div class="col-12">
<!--       <h4>Мои книги:</h4> -->
  <h4><%= I18n.t('reader.book_histories.title')%></h4>
      <div class="form-font">
        <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
          <tr class="table-secondary">
            
              <th><%= I18n.t('reader.book_histories.name_book')%></th>
              <th><%= I18n.t('reader.category')%></th>
              <th><%= I18n.t('reader.author')%></th>
              <th><%= I18n.t('reader.year_book')%></th>
              <th><%= I18n.t('reader.date_give')%></th>
              <th><%= I18n.t('reader.book_histories.date_return')%></th>

              <th></th>
          </tr>
          </thead>
          <tbody>
            <% @books_history.each do |history| %>
              <tr>
                
                <td><%= history.book_request.book.name %> </td>
                <td><%= history.book_request.book.book_type.name %></td>
                <td><%= history.book_request.book.author %></td>
                <td><%= history.book_request.book.year_book %></td>
                <td><%= history.owned_from.to_s(:ru_datetime) %> </td>
                
                <td><%= history.date_fut.to_s(:krat_datetime) %> </td>
                <td><%= button_to  I18n.t('reader.book_histories.read_return'), return_book_reader_book_history_path(history), class: "btn btn-outline-primary" %> </td>

              </tr>
            <% end %>
          
         </tbody>   
        </table>

        </div>
        
       </div>
      </div>
  </div>
  
</div>


