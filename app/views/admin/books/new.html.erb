<div class="container-fluid">
  <div class="row">
    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
    
        <% if notice %>
        <p id="notice"><%= notice %></p>
        <% end %>

        <h4>Добавление новой книги: </h4>

        <%= form_for :book, url: admin_books_path, html: {multipart: true}   do |f| %>
         
          
          <div class="form-group">
            <%= f.label 'Название:' %>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
          <!--  <p></p> -->
          <div class="form-group">
            <%= f.label 'Категория:' %>
            <%= f.select(:book_type_id,options_for_select(options_select_new))  %>
      
          </div>
           <!-- <p></p> -->
          <div class="form-group">
            <%= f.label 'Автор:' %>
            <%= f.text_field :author, class: "form-control" %>
          </div>
        <!--    <p></p> -->
           <div class="form-group">
            <%= f.label 'Дата издания:' %>
            <%= f.date_field :year_book, class: "form-control" %>
          </div>
        
        <div class="form-group">
            <%= f.file_field :image, class: "form-control" %>
          </div>  

         <!--  <p></p> -->
          <div class="actions">
            <%= f.submit "Сохранить новую книгу", class:"btn btn-outline-primary" %>
          </div>

          
        <% end %>



    </div>  <!-- col -->
  </div>  <!-- row -->
</div>  <!-- container -->
