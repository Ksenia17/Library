<h4>Редактирование данных администратора: </h4>

<%= form_for :user, url: admin_info_path(@user), method: :put  do |f| %>
   <%= render 'shared/error_messages' %>
  <p>
  <div class="field">
    <%= f.label 'Имя:' %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>
   <p></p>
  <div class="field">
    <%= f.label 'Фамилия:' %><br />
    <%= f.text_field :last_name  %>
  </div>
   <p></p>
  <div class="field">
    <%= f.label 'Электронная почта:' %><br />
    <%= f.text_field :email %>
  </div>
   <p></p>
   <div class="field">
    <%= f.label 'Дата рождения:' %><br />
    <%= f.date_field :birthdate %>
  </div>
  
  <p></p>
  <div class="actions">
    <%= f.submit "Сохранить изменения:" %>
  </div>
  </p>
<% end %>